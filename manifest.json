{
    "manifest_version": 3,
    "name": "VelocityTab",
    "version": "1.0.0",
    "description": "A modern, dark-themed new tab page with plugin support",
    "permissions": [
        "storage",
        "identity"
    ],
    "chrome_url_overrides": {
        "newtab": "index.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "web_accessible_resources": [{
        "resources": ["plugins/*"],
        "matches": ["<all_urls>"]
    }]
} 